document.addEventListener("DOMContentLoaded", function() {
    // Select the slider content
    const sliderContent = document.querySelector('.slider-content');

    // Clone the first image and append it to the end for seamless scrolling
    const firstImage = sliderContent.firstElementChild.cloneNode(true);
    sliderContent.appendChild(firstImage);

    // Animation function to scroll the images
    function scrollImages() {
        // Get the width of a single image
        const imageWidth = sliderContent.firstElementChild.clientWidth;
        
        // Scroll the images to the left
        sliderContent.style.transition = "transform 0.5s ease-in-out";
        sliderContent.style.transform = `translateX(-${imageWidth}px)`;

        // Reset the position of the images when transition ends
        setTimeout(function() {
            sliderContent.style.transition = "none";
            sliderContent.style.transform = "translateX(0)";
            sliderContent.appendChild(sliderContent.firstElementChild);
        }, 500); // Adjust this timing to match the transition duration
    }

    // Call the scrollImages function repeatedly
    setInterval(scrollImages, 2000); // Adjust the interval as needed
});